{
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "outDir": "./tscout/",
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}